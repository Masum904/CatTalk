<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF5722"
    tools:context=".Setting">


    <ImageView
        android:id="@+id/backarror"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:paddingTop="10dp"
        app:tint="#fff"
        app:srcCompat="@drawable/arrow" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/backarror"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:paddingTop="10dp"
            android:src="@drawable/user"
             />

        <ImageView
            android:id="@+id/plusId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="-40dp"
            android:layout_weight="1"

            app:srcCompat="@drawable/plaa"
            app:tint="#fff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="User Name : "
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nameId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Masum Billal"
                android:inputType="textPersonName"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Status :"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/statusid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Write your status"
                android:inputType="textPersonName"
                android:text="Name"
                android:textColor="#fff" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/saveButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_bg"
            android:text="SAVE"
            android:textSize="15dp"></androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/lastbackground"
        android:orientation="vertical"
        android:padding="40dp"
        android:paddingLeft="80dp">

        <TextView
            android:id="@+id/privicyid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:drawableLeft="@android:drawable/checkbox_on_background"
            android:drawablePadding="10dp"
            android:paddingLeft="80dp"
            android:text="Privacy Policy"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/aboutusId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:drawableLeft="@android:drawable/checkbox_on_background"
            android:drawablePadding="10dp"
            android:paddingLeft="80dp"
            android:text="About us"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/inviteFriendsId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:drawableLeft="@android:drawable/checkbox_on_background"
            android:drawablePadding="10dp"
            android:paddingLeft="80dp"
            android:text="Invite a Friend"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notificationId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:drawableLeft="@android:drawable/checkbox_on_background"
            android:drawablePadding="10dp"
            android:paddingLeft="80dp"
            android:text="Notification"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/helpId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:drawableLeft="@android:drawable/checkbox_on_background"
            android:drawablePadding="10dp"
            android:paddingLeft="80dp"
            android:text="Help"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>